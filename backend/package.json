{
    "name": "tara-backend",
    "version": "1.0.0",
    "description": "Monorepo for Tara backend services",
    "private": true,
    "workspaces": [
        "ai-service",
        "api-gateway",
        "content-service",
        "identity-service",
        "wellness-service"
    ],
    "scripts": {
        "install-all": "npm install",
        "start:gateway": "npm start -w api-gateway",
        "start:ai": "npm start -w ai-service",
        "start:identity": "npm start -w identity-service",
        "start:wellness": "npm start -w wellness-service",
        "dev:gateway": "npm run dev -w api-gateway",
        "dev:ai": "npm run dev -w ai-service",
        "dev:identity": "npm run dev -w identity-service",
        "dev:wellness": "npm run dev -w wellness-service",
        "dev:content": "npm run dev -w content-service",
        "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:ai\" \"npm run dev:identity\" \"npm run dev:wellness\" \"npm run dev:content\""
    },
    "dependencies": {
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "firebase-admin": "^12.0.0",
        "groq-sdk": "^0.3.3",
        "http-proxy-middleware": "^3.0.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.3.0",
        "mongoose": "^8.0.3",
        "openai": "^4.24.1"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "nodemon": "^3.0.2"
    }
}
